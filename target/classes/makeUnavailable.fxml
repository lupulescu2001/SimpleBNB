<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="399.0" prefWidth="607.0" vgap="10"
          xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.loose.fis.sre.controllers.MakeUnavailableController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Label text="Property name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="First Day Date:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="firstDay" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="First Month Date:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="firstMonth" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label text="First Year Date:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="firstYear" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label text="Last Day Date:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="lastDay" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Label text="Last Month Date:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="lastMonth" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <Label text="Last Year Date:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="lastYear" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    <Text fx:id="addMessage" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    <HBox alignment="bottom_right" spacing="0" GridPane.columnIndex="0" GridPane.rowIndex="9">
        <Button onAction="#handleMakeUnavailableAction" text="Make Unavailable" />
    </HBox>

</GridPane>
